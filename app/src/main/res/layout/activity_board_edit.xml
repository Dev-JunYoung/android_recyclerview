<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="어디서"/>

        <EditText
            android:id="@+id/edit_et_title"
            android:padding="16dp"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="어떤 산을 가셨나요?"
            />
    </LinearLayout>
    <LinearLayout

        android:id="@+id/profile_view"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미지"
                android:padding="16dp"
                />
            <android.widget.Button
                android:id="@+id/edit_btn_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="변경"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <ImageView
                android:id="@+id/edit_iv_board_img"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/edit_iv_board_img2"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/edit_iv_board_img3"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="무엇을"/>
    <EditText
        android:id="@+id/edit_et_content"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#eeeeee"
        android:hint="무엇을 하셨나요?"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <android.widget.Button
            android:padding="15sp"
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수정완료"
            android:textColor="@color/black"
            android:background="@color/main"
            android:layout_weight="1"
            android:layout_margin="15sp"/>
        <android.widget.Button
            android:id="@+id/btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="@color/black"
            android:background="@color/main"
            android:layout_weight="1"
            android:padding="15sp"
            android:layout_margin="15sp"/>

    </LinearLayout>



</LinearLayout>