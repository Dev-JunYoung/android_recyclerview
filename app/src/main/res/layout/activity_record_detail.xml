<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/tv_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nDetail  "
        android:textColor="@color/black"
        android:textSize="45dp"
        android:textStyle="bold"
        >
    </TextView>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"
        android:background="@drawable/btn_white"
        android:hint="킬로미터"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.07"></TextView>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/btn_white"
        android:hint="시간"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_distance"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_distance"
        app:layout_constraintTop_toBottomOf="@id/tv_distance"
        android:inputType="number"
        app:layout_constraintHeight_percent="0.07"
        ></TextView>

    <TextView
        android:id="@+id/tv_step"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/btn_white"
        android:hint="걸음"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_time"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintStart_toStartOf="@+id/tv_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"

        android:inputType="number"
        />


    <TextView
        android:id="@+id/tv_MaxHeight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/btn_white"
        android:hint="최고고도"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_step"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="@+id/tv_step"
        app:layout_constraintTop_toBottomOf="@+id/tv_step"
        app:layout_constraintWidth_percent="0.8"
        android:inputType="number"/>


    <TextView
        android:id="@+id/tv_MinHeight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_white"
        android:hint="최저고도"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_MaxHeight"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_MaxHeight"
        app:layout_constraintTop_toBottomOf="@+id/tv_MaxHeight"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tv_avg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_white"
        android:hint="평균속도"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_MinHeight"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_MinHeight"
        app:layout_constraintTop_toBottomOf="@+id/tv_MinHeight"
        app:layout_constraintWidth_percent="0.8" />


    <android.widget.Button
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20sp"
        android:background="@color/choose"
        android:text="뒤로가기"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_avg"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_avg"
        app:layout_constraintTop_toBottomOf="@+id/tv_avg"></android.widget.Button>


</androidx.constraintlayout.widget.ConstraintLayout>












