<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main">
    <TextView
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textAlignment="center"
        android:text="0:00"
        android:textSize="70sp"
        android:layout_marginTop="50sp"
        android:gravity="center_horizontal">
    </TextView>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/km_view"
        app:layout_constraintTop_toBottomOf="@id/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="킬로미터"
        android:textSize="20sp"
        android:textAlignment="center"
        android:paddingBottom="30sp"
        android:gravity="center_horizontal">
    </TextView>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/km_view"
        android:id="@+id/record_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textAlignment="center"
            android:text="0\n걸음"
            android:textSize="30sp"
            android:gravity="center_horizontal">
        </TextView>
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="00:00:00\n시간"
            android:textAlignment="center"
            android:textSize="30sp"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textAlignment="center"
            android:text="0\n고도"
            android:textSize="30sp"
            android:gravity="center_horizontal">
        </TextView>
    </LinearLayout>
    <android.widget.Button
        android:text="중지"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_for_circle_button_black"
        app:layout_constraintBottom_toBottomOf="@+id/start_button"
        app:layout_constraintEnd_toStartOf="@+id/start_button"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_button"
        app:layout_constraintWidth_percent="0.15" />

    <android.widget.Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/maker"

        app:layout_constraintBottom_toBottomOf="@+id/start_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/start_button"
        app:layout_constraintTop_toTopOf="@+id/start_button"
        app:layout_constraintWidth_percent="0.15" />

    <android.widget.Button
        android:id="@+id/start_button"
        android:layout_width="0dp"
        android:layout_height="0sp"
        android:background="@drawable/shape_for_circle_button_black"
        android:text="일시정지"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.864"
        app:layout_constraintWidth_percent="0.33"></android.widget.Button>





</androidx.constraintlayout.widget.ConstraintLayout>