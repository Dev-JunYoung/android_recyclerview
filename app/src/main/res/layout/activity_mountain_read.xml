<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MountainReadActivity"
    android:orientation="vertical"
    android:layout_margin="5dp">
    <TextView
        android:id="@+id/read_mnt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="산이름"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:background="@color/main"
        android:textColor="@color/white"/>
    <!--산이름 + 별칭 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="한마디 : "
                android:textSize="15dp"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/read_mnt_subName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="간단 소개"
                android:textSize="15dp"
                android:layout_margin="5dp"/>
    </LinearLayout>
    <!--소재지 + 해발고도 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_gravity="center"
        android:textAlignment="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소재지 : "
            android:textSize="15sp"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/read_mnt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소재지"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/read_mnt_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해발고도"
            android:textSize="20dp"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등산코스 : "
        android:textSize="20dp"
        android:layout_margin="5dp"/>
    <!--코스 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/read_mnt_course"
                android:text="등산코스"
                android:textSize="13dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

    </LinearLayout>
    <!--선정이유, 상세설명, 개요, 오시는길, 숙소정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <android.widget.Button
            android:id="@+id/btn_mnt_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개요"
            android:textSize="12dp"
            android:layout_weight="1"/>
        <android.widget.Button
            android:id="@+id/btn_mnt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세설명"
            android:textSize="12dp"
            android:layout_weight="1"/>
        <android.widget.Button
            android:id="@+id/btn_mnt_pickReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선정이유"
            android:textSize="12dp"
            android:layout_weight="1"/>
        <android.widget.Button
            android:id="@+id/btn_mnt_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오시는길"
            android:textSize="12dp"
            android:layout_weight="1"/>
        <android.widget.Button
            android:id="@+id/btn_mnt_tour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="숙소정보"
            android:textSize="12dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/mnt_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="내용"
                android:textSize="15dp"/>

        </ScrollView>

    </LinearLayout>

</LinearLayout>